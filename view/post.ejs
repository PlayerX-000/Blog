<body>
  <header class="sticky-top">
    <!--Menu apos o colappso-->
    <div class="collapse" id="navbarToggleExternalContent">
      <div class="bg-menu p-4">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="opcNav nav-link link" id="home-tab" href="/">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="opcNav nav-link link" aria-current="page" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="opcNav nav-link link" id="categria-tab" href="/categorias">Categorias</a>
            </li>
          </ul>
      </div>
    </div>
    <!--Menu antes do colappso-->
        <div class="pos-f-t">
      <nav class="navbar navbar-expand-lg navbar-dark bg-menu">
          <div class="container-fluid">
            <a id="logoSite" class="navbar-brand" style="font-size: calc(31px + (48 - 31) * ((100vw - 400px) / (2600 - 400)));" href="/"><%= marca%></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Alterna navegação">
              <span class="navbar-toggler-icon"></span>
            </button>
             <div class="collapse navbar-collapse justify-content-space-between" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="/">Inicio</a>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link" href="/categorias">Categorias</a>
              </li> 
              <li>
                <a class="nav-link" aria-current="page" href="/login">Login</a>
              </li>
              </ul>
              <div class="menuSS">
              <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="O que você precisa?" aria-label="Search">
                <button class="btn btn-secondary seg-plano" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
              </form>
            </div>
            </div>
          </div>
        </nav>
        </div>
  </header>
    <!-- Page content-->
    <div style="max-width: 100%;">
        <div class="row">
            <div class="col-lg-8">
                <!-- Post content-->
                <article style="word-break: break-all;">
                    <!-- Post header-->
                    <header class="mb-4">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-1"><%=tituloPost%></h1>
                        <!-- Post meta content-->
                        <div class="text-muted fst-italic mb-2">Postado <%=dataPost%> por <%=donoPost%></div>
                        <!-- Post categories-->
                        <% if (tagPost.length > 0){ %>
                          <% for (let a=0;a < tagPost.length;a++){ %>
                            <a class="badge bg-secondary text-decoration-none link-light" href="#!"><%=tagPost[a]%></a>
                            <% }}%>
                    </header>
                    <!-- Preview image figure-->
                      <div id="corouselPost" class="carousel slide" data-ride="carousel">
                      <ol class="carousel-indicators">
                        <% if (ImgPost.length > 0){ %>
                          <% for (let a=0;a < ImgPost.length;a++){ %>
                            <% if (a==0){ %>
                        <li data-target="#corouselPost" data-slide-to="<%=a%>" class="active"></li>
                        <% }else{ %>
                        <li data-target="#corouselPost" data-slide-to="<%=a%>"></li>
                       <% }}} %>
                      </ol>
                      <div class="carousel-inner">
                        <% if (ImgPost.length > 0){ %>
                          <% for (let a=0;a < ImgPost.length;a++){ %>
                            <% if (ImgPost[a]!=""){ %>                           
                            <% if (a==0){ %>
                        <div class="carousel-item active">
                          <figure class="mb-4"><img style="width: 100%;" class="img-fluid rounded" src="<%=ImgPost[a]%>" alt="First slide 960x330" /></figure>
                        </div>
                       <% }else{ %>
                        <div class="carousel-item">
                          <figure class="mb-4"><img style="width: 100%;" class="img-fluid rounded" src="<%=ImgPost[a]%>" alt="First slide 960x330" /></figure>
                        </div>
                       <% }}}} %>
                      </div>
                    </div>
                   
                    <!-- Post content-->
                    <section class="centraliza mb-5">
                        <p class="fs-5 mb-4"><%=paragrafo1Post%></p>
                        <a class="BotaoComprar" href="<%=linkProduto%>">Comprar</a>
                    </section>
                </article>
            </div>
            <% if (relacionados.length > 0){ %>
            <!-- Side widgets-->
            <div class="col-lg-4" style="margin-top: 5%;text-align: center;">
                <!-- Side widget-->
                <div class="card mb-4">
                    <div class="card-header">Relacionados</div>
                    <div class="container" style="display: flex; flex-direction: column; flex-wrap: wrap; align-items: center;">
                    <% for(relacionado of relacionados){ %>
                    <div class="borda" style="background-color: #d9d6ef; width: 80%; align-items: center; text-align: center;">
                    <figure class="mb-4"><img style="width: auto;" class="img-fluid rounded" src="<%=relacionado.card_img_url%>" alt="..." /></figure>
                    <div class="card-body"><%=relacionado.card_texto%></div>
                    <a href="/post/<%=relacionado.id%>" class="btn btn-sm" style="color:wheat; background-color: #2014dbd1;" >Ver</a>
                    </div>
                    <% }} %>
                    </div>
                  </div>
            </div>
        </div>
    </div>

